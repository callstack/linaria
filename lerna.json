{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "./packages/*",
    "./website"
  ],
  "version": "3.0.0-beta.17",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore: publish",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "**/website/**"
      ]
    }
  }
}
